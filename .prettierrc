{
  "overrides": [
    {
      "files": "*.{ts,tsx}",
      "options": {
        "arrowParens": "always",
        "jsxSingleQuote": false,
        "jsxBracketSameLine": false,
        "singleQuote": true,
        "semi": true,
        "bracketSpacing": true,
        "useTabs": false,
        "tabWidth": 2,
        "trailingComma": "all",
        "printWidth": 120,
        "endOfLine": "auto"
      }
    },
    {
      "files": "*.{js,jsx}",
      "options": {
        "arrowParens": "always",
        "jsxSingleQuote": false,
        "jsxBracketSameLine": false,
        "singleQuote": true,
        "semi": true,
        "bracketSpacing": true,
        "useTabs": false,
        "tabWidth": 2,
        "trailingComma": "all",
        "printWidth": 100,
        "endOfLine": "auto"
      }
    },
    {
      "files": "*.{css,scss,sass,less}",
      "options": {
        "singleQuote": false,
        "semi": true,
        "useTabs": true,
        "tabWidth": 1
      }
    },
    {
      "files": "*.model.ts",
      "options": {
        "arrowParens": "always",
        "jsxSingleQuote": false,
        "jsxBracketSameLine": false,
        "singleQuote": true,
        "semi": true,
        "bracketSpacing": true,
        "useTabs": false,
        "tabWidth": 2,
        "trailingComma": "all",
        "printWidth": 120,
        "endOfLine": "auto"
      }
    }
  ]
}
